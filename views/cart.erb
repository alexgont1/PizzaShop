<h2>Your cart</h2>

<table class="table table-striped"> 
	<thead> 
		<tr>
			<th>#</th>  
			<th>Product</th> 
			<th>Price</th>
			<th>Qty</th>
		</tr>
	</thead> 

	<tbody> 
		<% i = 0 %>
		<% @items.each do |item| %>
			<% i+=1 %>
			<tr>
				<td><%= "#{i}" %></td>  		
				<td><%= item[0].title %></td> 
				<td><%= item[0].price %></td> 
				<td><%= item[1] %></td> 
			</tr> 

		<% end %>
	</tbody> 	
</table>