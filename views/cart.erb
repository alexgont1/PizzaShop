<h2>Your cart</h2>

<table class="table table-striped"> 
	<thead> 
		<tr>
			<th>#</th>  
			<th>Product</th> 
			<th>Price</th>
			<th>Qty</th>
		</tr>
	</thead> 

	<tbody> 
		<% i = 0 %>
		<% total_price = 0 %>
		<% total_qty = 0 %>
		<% @items.each do |item| %>
			<% i+=1 %>
			<tr>
				<td><%= "#{i}" %></td>  		
				<td><%= item[0].title %></td> 
				<td><%= item[0].price %></td> 
				<td><%= item[1] %></td> 
			</tr> 
			<% total_price += item[0].price %>
			<% total_qty += item[1].to_i %>
		<% end %>

			<tr class="success"> 
				<td><b>Total:</b></td> 
				<td></td> 				
				<td><b><%= "$#{total_price}" %></b></td> 
				<td><b><%= "#{total_qty}" %></b></td> 
			</tr>

	</tbody> 	
</table>

<form action="/place_order" method="POST" role="form">

  <input name="order[orders_input]" type="hidden" value="<%= @orders_input %>"/>

  <div class="form-group">
    <label>Your name</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Your name">
  </div>

  <div class="form-group">
    <label>Your phone</label>
    <input name="order[phone]" type="text" class="form-control" placeholder="Your phone">
  </div>

  <div class="form-group">
    <label>Your address</label>
    <textarea name="order[address]" type="text" class="form-control" placeholder="Your address"></textarea>
  </div>

  <button type="submit" class="btn btn-lg btn-success btn-primary">Place my order</button>

</form>