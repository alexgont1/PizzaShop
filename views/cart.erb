<h2>Your cart</h2>

<table class="table table-striped"> 
	<thead> 
		<tr>
			<th>#</th>  
			<th>Product</th> 
			<th>Price</th>
			<th>Qty</th>
		</tr>
	</thead> 

	<tbody> 
		<% i = 0 %>
		<% total_price = 0 %>
		<% total_qty = 0 %>
		<% @items.each do |item| %>
			<% i+=1 %>
			<tr>
				<td><%= "#{i}" %></td>  		
				<td><%= item[0].title %></td> 
				<td><%= item[0].price %></td> 
				<td><%= item[1] %></td> 
			</tr> 
			<% total_price += item[0].price %>
			<% total_qty += item[1].to_i %>
		<% end %>

			<tr class="success"> 
				<td></td> 
				<td></td> 
				<td><b>Total: <%= "#{total_price}" %></b></td> 
				<td><b>Total: <%= "#{total_qty}" %></b></td> 
			</tr>

	</tbody> 	
</table>